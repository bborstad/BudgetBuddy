<%= form_with(model: following, local: true) do |form| %>
  <% if following.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(following.errors.count, "error") %> prohibited this following from being saved:</h2>

      <ul>
      <% following.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <div class="form-group">
    <%= form.label :"Check box if you want to follow user" %>
    <%= form.check_box :tfalse, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if following.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', following, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if following.persisted? %>
      <%= link_to "Cancel", following, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", followings_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
