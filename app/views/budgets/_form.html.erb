<%= form_with(model: budget, local: true) do |form| %>
  <% if budget.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(budget.errors.count, "error") %> prohibited this budget from being saved:</h2>

      <ul>
      <% budget.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!--- Labels and inputs -->
  <div class="form-group">
    <%= form.label :month, 'Month' %>
    <%= form.text_field :month, class: 'form-control' %>

    <%= form.label :year, 'Year' %>
    <%= form.text_field :year, class: 'form-control' %>

  </div>

  <!--- Logic for handling creation/destruction -->
  <div class="form-group">
    <% if budget.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', budget, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if budget.persisted? %>
      <%= link_to "Cancel", budget, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", budgets_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
