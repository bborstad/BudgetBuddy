


<div class="row">
  <div class="col-sm-6">
    <h1>Budgets</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_budget_path, class: 'btn btn-primary' do %>
    Add New Budget
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Month</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @budgets.each do |budget| %>
        <%= content_tag :tr, id: dom_id(budget), class: dom_class(budget) do %>
          

                      <td><%= budget.month %> <%= budget.year %></td>
          
          
            <td><%= link_to 'Show', budget %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
