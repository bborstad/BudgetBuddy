 
 
 
<div class="row">
<div class="col-sm-6">
  <h1>Users</h1>
</div>

<div class="col-sm-6 text-right">

</div>
</div>

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th> Name </th>
      <th>Email </th>
      <th>  </th>
      <th> status </th>
      

          
        <th></th>
      
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
        
        
          <td><%=user.first_name%> <%=user.last_name %></td>
          <td><%= (user.email) %></td>
        
        
          <td><%= link_to 'Show', user %></td>
        
      <% end %>
    <% end %>
  </tbody>
</table>
</div>

<div class="container">
    <div class ="row">
        <% @users.each do |user| %>
            <% if user.email? %>
                <div class="card container border-primary mb-3" style ="width: 30rem">
                    <div class="card-header row justify-content-between text-white bg-primary">
                        <h4 class='m-0'>
                            <%= user.name %>
                        </h4>
                    </div>
                    <div class="card-body">
                        <% if user.avatar.attached?%>
                            <div class="avatar">
                                <%= image_tag(user.avatar, class: 'img-circular', width:100, height:100, align: "right") %>
                            </div>
                        <%end%>
                        <p class="card-text">Name:
                        <h6 class="card-subtitle mb-2 text-muted"><%= user.email%></h6>
                    </div>    
                    <div class="card-footer">
                        <%= link_to 'More About This User', user %>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>