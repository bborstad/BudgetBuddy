                                                        <div class="h9 m-0"><%= comment.try(:user).try(:first_name) %> <%= comment.try(:user).try(:last_name) %></div>
                                                    </div>
                                                <% end  %>  -  <%= comment.content %>

                                            
                                            



                                            
                                            
                                                <% if current_user == comment.user %>
