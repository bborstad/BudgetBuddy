


<div class="row">
  <div class="col-sm-6">
    <h1>Retirements</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_retirement_path, class: 'btn btn-primary' do %>
    Add New Retirement
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Start amount</th>
            <th>Time until retirement</th>
            <th>Annual savings</th>
            <th>Intrest rate</th>
            <th>Retirement estimate</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @retirements.each do |retirement| %>
        <%= content_tag :tr, id: dom_id(retirement), class: dom_class(retirement) do %>
          

                      <td><%= retirement.start_amount %></td>
                      <td><%= retirement.time_until_retirement %></td>
                      <td><%= retirement.annual_savings %></td>
                      <td><%= retirement.intrest_rate %></td>
                      <td><%= retirement.retirement_estimate %></td>
          
          
            <td><%= link_to 'Show', retirement %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
