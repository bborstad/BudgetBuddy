
<!--  Table to display all retirement estimates-->

<%= stylesheet_link_tag "hideme"%>
<button onclick="myFunction()" class=" btn btn-light bg-white rounded-pill shadow-sm px-4 mb-4" style="vertical-align:middle"><span><i class="fas fa-list-ul"></i><small class="text-uppercase font-weight-bold"> Nav-bar Toggle</small></span></button>


<div class="row">
  <div class="col-sm-6">
    <h1>My Retirements Quotes</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_retirement_path, class: 'btn btn-primary' do %>
     New Quote
  <% end %>
  </div>
</div>


<!-- table header -->
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Annual Savings</th>
            <th>Year of Retirement</th>
            <th>Initial Savings</th>
            <th>Interest Rate</th>
            <th>Retirement Estimate</th>
            
          <th></th>
          <th></th>
        
      </tr>
    </thead>
    <!-- table body -->
    <tbody>
      <% @retirements.each do |retirement| %>
        <%= content_tag :tr, id: dom_id(retirement), class: dom_class(retirement) do %>
          

                      <td><%= number_to_currency(retirement.annual_savings) %></td>
                      <td><%= retirement.year_of_retirement %></td>
                      <td><%= number_to_currency(retirement.inital_savings) %></td>
                      <td><%= number_to_percentage(retirement.intrest_rate) %></td>
                      <td><%= number_to_currency(retirement.retirement_estimate) %></td>
          
          
            <td><%= link_to 'Details', retirement %></td>
            <td><%= link_to 'Delete', retirement, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %></td>
            
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
