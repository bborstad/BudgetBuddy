<!-- form to create a new retirement estimate -->
<%= form_with(model: retirement, local: true) do |form| %>
  <% if retirement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(retirement.errors.count, "error") %> prohibited this retirement from being saved:</h2>

      <ul>
      <% retirement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <!-- annual_savings -->
  <div class="form-group">
    <%= form.label :"How much will you deposit for your retirement account annually?" %>
    <%= form.text_field :annual_savings, placeholder: "0.00", class: 'form-control',min:0,required:true %>
  </div>

  <!-- year_of_retirement -->
  <div class="form-group">
    <%= form.label :"What year do you want to retire by?" %>
    <%= form.number_field :year_of_retirement, min:Date.today.year, placeholder: "YYYY", class: 'form-control', required:true %>
  </div>

  <!-- inital_savings -->
  <div class="form-group">
    <%= form.label :"How much did you start with in your account?"%>
    <%= form.text_field :inital_savings, placeholder: "0.00", class: 'form-control',required:true %>
  </div>

  <!-- intrest_rate -->
  <div class="form-group">
    <%= form.label :"Interest_Rate (%)" %>
    <%= form.text_field :intrest_rate, placeholder: "0.00", class: 'form-control',required:true %>
  </div>


  <div class="form-group">
    <% if retirement.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', retirement, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if retirement.persisted? %>
      <%= link_to "Cancel", retirement, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", retirements_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
