<%= form_with(model: retirement, local: true) do |form| %>
  <% if retirement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(retirement.errors.count, "error") %> prohibited this retirement from being saved:</h2>

      <ul>
      <% retirement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if retirement.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', retirement, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>



    <div>
    <%= label_tag "Start Amount" %>
    <br/>
    <%= text_field_tag "start_amount", nil %>

    <br/>

    <%= label_tag "Retire By " %>
    <br/>
    <%= text_field_tag "retire_by", nil %>

    <br/>

    <%= label_tag "Expected Intrest" %>
    <br/>
    <%= text_field_tag "intrest", nil %>

    </div>




    <%= form.submit class: 'btn btn-primary' %>

    <% if retirement.persisted? %>
      <%= link_to "Cancel", retirement, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", retirements_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
