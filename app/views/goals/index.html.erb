


<div class="row">
  <div class="col-sm-6">
    <h1>Goals</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_goal_path, class: 'btn btn-primary' do %>
    Add New Goal
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Title</th>
            <th>Progress</th>
            <th>Goal</th>
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @goals.each do |goal| %>
        <%= content_tag :tr, id: dom_id(goal), class: dom_class(goal) do %>
          

                      <td><%= goal.title %></td>
                      <td><%= goal.progress %></td>
                      <td><%= goal.goal %></td>
          
          
            <td><%= link_to 'Details', goal %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
