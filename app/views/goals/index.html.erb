


<div class="row">
  <div class="col-sm-6">
    <h1>Goals</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_goal_path, class: 'btn btn-primary' do %>
    Add New Goal
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <tbody>
      <% @goals.each do |goal| %>
        <%= content_tag :tr, id: dom_id(goal), class: dom_class(goal) do %>
          

                      <td><%= bar_chart Goal.where(user_id:current_user).where(title: goal.title).group(:title).sum(:progress), min: 0, max: goal.goal, prefix: "$", round: 2, zeros: true, height: "75px" %></td>
                      
          
            <td><%= link_to 'Details', goal %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
