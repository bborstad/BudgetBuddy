<div class="row">
  <div class="col-sm-6">
    <h1>Current Goals</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_goal_path, class: 'btn btn-primary' do %>
    Add a Goal
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <tbody>
      <% @goals.each do |goal| %>
        <%= content_tag :tr, id: dom_id(goal), class: dom_class(goal) do %>
          
          <% if goal.progress != goal.goal %>

            <td><%= bar_chart Goal.where(user_id:current_user).where(title: goal.title).group(:title).sum(:progress), min: 0, max: goal.goal, prefix: "$", round: 2, zeros: true, height: "75px" %></td>
            <td><%= link_to (image_tag ("info.png") ), goal %></td>
            <td><%= link_to (image_tag ("plus.png") ), edit_goal_path(id: goal.id) %></td>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-sm-6">
    <h1>Completed Goals</h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <tbody>
      <% @goals.each do |goal| %>
        <%= content_tag :tr, id: dom_id(goal), class: dom_class(goal) do %>
          
          <% if goal.progress == goal.goal || goal.progress >= goal.goal %>

            <td><%= bar_chart Goal.where(user_id:current_user).where(title: goal.title).group(:title).sum(:progress), min: 0, max: goal.goal, prefix: "$", round: 2, zeros: true, height: "75px", colors: ["#008000"] %></td>
            <td><%= link_to (image_tag ("info.png") ), goal %></td>
          
            <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
