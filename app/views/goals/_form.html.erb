<%= stylesheet_link_tag "hideme"%>
<!--- Form for Goals pages -->
<%= form_with(model: goal, local: true) do |form| %>
  <% if goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
      <% goal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <!--- All lables and inputs for this page. -->
  <div class="form-group">
    <%= form.label :title, 'Goal Name' %>
    <%= form.text_field :title, placeholder: "ex: Savings", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :title, 'How much have you saved towards this goal?' %>
    <%= form.text_field :progress,  placeholder: "0.00", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :goal, 'What is the total amount you want to save?' %>
    <%= form.text_field :goal, placeholder: "0.00", class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if goal.persisted? %>
      <div class="float-right">
        <%= link_to 'Delete Goal', goal, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <!--- Logic to make sure Goal changes save. -->
    <% if goal.persisted? %>
      <%= link_to "Cancel", goal, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", goals_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
