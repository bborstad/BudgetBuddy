


<div class="row">
<div class="col-sm-6">
  <h1>Your Debt Quote History</h1>
</div>

<div class="col-sm-6 text-right">
<%= link_to new_calculate_debt_path, class: 'btn btn-primary' do %>
  New Quote
<% end %>
</div>
</div>

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
  

          <th>Principle</th>
          <th>Interest Rate</th>
          <th>Monthly payments</th>
          <th>Compounds per year</th>
          <th>Number of year</th>
          <th>Total Paid </th>
          
        <th></th>
        <th></th>
      
    </tr>
  </thead>

  <tbody>
    <% @calculate_debts.each do |calculate_debt| %>
      <%= content_tag :tr, id: dom_id(calculate_debt), class: dom_class(calculate_debt) do %>
        

                    <td><%=  number_to_currency(calculate_debt.principle) %></td>
                    <td><%= number_to_percentage(calculate_debt.rate) %></td>
                    <td><%=  number_to_currency(calculate_debt.monthly_payements) %></td>
                    <td><%= calculate_debt.compounds_per_year %></td>
                    <td><%= calculate_debt.number_of_year %></td>
                    <td><%= number_to_currency((calculate_debt.number_of_year*12*calculate_debt.monthly_payements)) %></td>

        
          <td><%= link_to 'Show', calculate_debt %></td>
          <td><%= link_to 'Destroy', calculate_debt, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
          </td>
        
      <% end %>
    <% end %>
  </tbody>
</table>
</div>