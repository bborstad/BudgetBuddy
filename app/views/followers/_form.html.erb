      <ul>
      <% follower.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% if follower.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', follower, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if follower.persisted? %>
      <%= link_to "Cancel", follower, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", followers_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
